<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAnimateImage.MainPage">

	<VerticalStackLayout
		Spacing="25"
		Padding="30,0"
		VerticalOptions="Center">

		<Grid HeightRequest="100"
		      BackgroundColor="Green"
		      VerticalOptions="Center"
		      WidthRequest="100">
			<Ellipse Fill="Pink"
			         HeightRequest="97" 
			         HorizontalOptions="Center"
			         VerticalOptions="Center"
			         WidthRequest="97" />
			<!--<Image x:Name="cog"
			       HeightRequest="96"
			       Source="cog40.png"
			       WidthRequest="96" />-->
			<Image x:Name="cog"
			       HeightRequest="96"
			       HorizontalOptions="Center"
			       Source="pluscircle.png"
			       VerticalOptions="Center"
			       WidthRequest="96" />
		</Grid>

		<Button Text="Start Animation" Clicked="Start_Animation"/>

	</VerticalStackLayout>

</ContentPage>